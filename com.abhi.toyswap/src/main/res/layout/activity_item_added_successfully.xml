<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top"
    android:padding="@dimen/space_2">


    <ImageView
        android:id="@+id/image_item_added_successfully_logo"
        android:layout_width="@dimen/space_120"
        android:layout_height="@dimen/space_120"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_30"
        android:layout_weight="1"
        android:background="@drawable/item_added_successfully_confirmation_icon"
        android:visibility="visible" />


    <TextView
        android:id="@+id/text_item_added_successfully_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_item_added_successfully_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_20"
        android:gravity="center"
        android:text="@string/congratulations"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/text_item_added_successfully_item_has_been_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_item_added_successfully_congratulations"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_20"
        android:gravity="center"
        android:text="@string/item_has_been_posted"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_13"
        android:textStyle="normal" />


    <Button
    android:id="@+id/button_item_added_successfully_post_another"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text_item_added_successfully_item_has_been_posted"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/space_30"
    android:background="@drawable/button_background"
    android:paddingBottom="@dimen/space_5"
    android:paddingLeft="@dimen/space_20"
    android:paddingRight="@dimen/space_20"
    android:paddingTop="@dimen/space_5"
    android:text="@string/post_another_item"
    android:textColor="@color/white"
    android:visibility="visible" />

    <TextView
        android:id="@+id/text_item_added_successfully_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_item_added_successfully_post_another"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_20"
        android:gravity="center"
        android:text="@string/back"
        android:textColor="@color/appgrey"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold" />

</RelativeLayout>
