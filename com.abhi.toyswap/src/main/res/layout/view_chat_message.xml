<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_10"
    android:paddingLeft="@dimen/space_15"
    android:paddingRight="@dimen/space_10"
    android:paddingTop="@dimen/space_10">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_chat_message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/space_7"
        android:layout_marginRight="@dimen/space_5"
        android:layout_marginTop="@dimen/space_7"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1"
        app:cardCornerRadius="@dimen/space_20">

        <ImageView
            android:id="@+id/image_chat_message_icon"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_unfavourite" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/text_chat_message_other_user_message_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/space_5"
        android:layout_toRightOf="@+id/cardview_chat_message_icon"
        android:text="Product Name"
        android:layout_marginBottom="@dimen/space_3"
        android:textColor="@color/app_base_color"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/text_chat_message_other_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_chat_message_other_user_message_datetime"
        android:layout_toRightOf="@+id/cardview_chat_message_icon"
        android:background="@drawable/chat_message_other_user_message_background"
        android:padding="@dimen/space_10"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/text_chat_message_own_message_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/space_5"
        android:text="Product Name"
        android:layout_marginBottom="@dimen/space_3"
        android:textColor="@color/app_base_color"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/text_chat_message_own_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_chat_message_own_message_datetime"
        android:background="@drawable/chat_message_own_message_background"
        android:padding="@dimen/space_10"
        android:text="By sheenam garg"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15"
        android:visibility="gone" />


</RelativeLayout>
